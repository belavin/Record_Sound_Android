<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/tracklist_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    >  
    
    <TextView android:id="@+id/tracklist_item_title"
        android:textSize="18dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
		android:ellipsize="marquee"
		tools:ignore="RtlHardcoded,SpUsage"
		android:maxLines="1" />

    <TextView android:id="@+id/tracklist_item_artist"
        android:textSize="14dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tracklist_item_title"
        android:layout_alignParentLeft="true"
		android:ellipsize="marquee"
		tools:ignore="RtlHardcoded,SpUsage"
		android:maxLines="1" />
        
    <TextView android:id="@+id/tracklist_item_duration"
        android:textSize="14dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
		tools:ignore="RelativeOverlap,RtlHardcoded,SpUsage" />
        
     <ImageView android:id="@+id/tracklist_item_playicon"
     	android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:layout_below="@id/tracklist_item_duration"
     	android:layout_alignParentRight="true"
     	android:layout_marginTop="6dip"
     	android:layout_marginRight="3dip"
		 tools:ignore="ContentDescription,RtlHardcoded" />
        
</RelativeLayout>
